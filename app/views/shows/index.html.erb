<div class="row">

<% @shows.each do |show| %>

  <div class="col-md-3">
    <%= link_to(show) do %>
      <div class="thumbnail">
        <img src="<%= show.image %>">
        <div class="caption">
          <h3 class="title"><%= show.title %>  </h3>
          <p class="starring"><%= show.starring %>  </p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
  
</div>